{
  "type": "module",
  "private": true,
  "description": "一个云原神自动化工具，基于 Puppeteer 实现自动化操作，支持游戏脚本执行功能，提升游戏体验和自动化效率。",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-username/freedom#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/freedom.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/freedom/issues"
  },
  "keywords": [
    "genshin",
    "genshin-impact",
    "automatic",
    "auto-play-game",
    "typescript",
    "puppeteer",
    "cloud gaming",
    "monorepo",
    "原神",
    "游戏自动化",
    "云游戏",
    "自定义脚本"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.6.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter='@freedom/cli' run dev",
    "dev:core": "pnpm --filter='@freedom/core' run dev",
    "dev:all": "pnpm -r --parallel --filter='./packages/*' run dev",
    "build": "pnpm -r --filter='./packages/*' run build",
    "lint": "eslint ./packages/**/*.{js,jsx,ts,tsx,mjs,cjs}",
    "lint:fix": "eslint ./packages/**/*.{js,jsx,ts,tsx,mjs,cjs} --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/node": "22.13.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "puppeteer": "^24.2.0",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "22.13.0",
      "typescript": "^5.3.3"
    }
  }
}
